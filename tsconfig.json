{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "outDir": "build",
    "lib": ["es2015", "dom"],
    "module": "es2020",
    "target": "es2015",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@ast/*": ["./parser/ast/*"],
      "@visitors/*": ["./parser/visitors/*"],
      "@lib/*": ["./lib/*"],
      "@exceptions/*": ["./exceptions/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "declaration": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
